from flask import Flask, render_template

app = Flask(__name__)

@app.route('/')
def primeira_pagina():
    return """
    <!DOCTYPE html>
    <html>
        <head>
            <title>Opções de Filmes</title>
        </head>
        <body leftmargin="60">
            <h1>DECIDA QUAL FILME ASSISTIR</h1>
            <a href="http://vinicius897.pythonanywhere.com/"><h3>Home</h3></a>
            <h2>Gêneros de Filmes por Classificação Indicativa</h2>
            <p>Neste site será mostrado uma lista de filmes indicados para você assistir com base no gênero e a classificação indicativa escolhida .</p>
            <ul>
                 <a href="http://vinicius897.pythonanywhere.com/idadeacao"><li>Ação</li></a>
                 <a href="http://vinicius897.pythonanywhere.com/idadeanimacao"><li>Animação</li></a>
                 <a href="http://vinicius897.pythonanywhere.com/idadecomedia"><li>Comédia</li></a>
                 <a href="http://vinicius897.pythonanywhere.com/idadedrama"><li>Drama</li></a>
                 <a href="http://vinicius897.pythonanywhere.com/idadeficcaocientifica"><li>Ficção Cientifica</li>
                 <a href="http://vinicius897.pythonanywhere.com/idaderomance"><li>Romance</li></a>
